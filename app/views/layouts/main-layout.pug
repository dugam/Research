include ../common/mixins/mixins
block vars
  - title = 'Title page'
  - bodyClass = ''
  - rootPath = ''
doctype html
html(class="no-js", lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    title=title
    meta(name="description", content="")
    meta(name="keywords", content="")
    meta(name="robots", content="index, follow")
    meta(name="author", content="")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0, shrink-to-fit=no")
    link(rel="icon", href="./favicon.ico", type="image/x-icon")

    if isMin
      link(rel="stylesheet", href= rootPath + "assets/css/libs.min.css")
      link(rel="stylesheet", href= rootPath + "assets/css/app.min.css")
    else
      link(rel="stylesheet", href= rootPath + "assets/css/libs.css")
      link(rel="stylesheet", href= rootPath + "assets/css/app.css")

  body(class=bodyClass)
    .site-wrapper
      include ../common/header
      main.site-main
        block container
      include ../common/footer
    block layer
    include ../common/script
    noscript JavaScript is off. Please enable to view full site.
